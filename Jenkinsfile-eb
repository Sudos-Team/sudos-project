pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('jenkins-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('jenkins-secret-access-key')
    }
    
    stages {
  
        stage ("terraform init") {
            steps {
                sh ('terraform -chdir=Terraform/modules/aws-elasticbeanstalk init -upgrade') 
            }
        }

        stage ("terraform apply") {
            steps {
                sh ('terraform -chdir=Terraform/modules/aws-elasticbeanstalk apply --auto-approve')
           }
        }
    }
}