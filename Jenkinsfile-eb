pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('jenkins-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('jenkins-secret-access-key')
    }
    
    stages {
        
        stage ("terraform init") {
            steps {
                sh ('terraform init') 
            }
        }
        
        stage ("terraform apply") {
            steps {
                sh ('terraform apply --auto-approve -target="`module.aws-elasticbeanstalk.aws_elastic_beanstalk_application.sudos-duihua-app`"')
           }
        }
    }
}