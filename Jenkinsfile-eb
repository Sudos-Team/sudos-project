pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('jenkins-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('jenkins-secret-access-key')
    }
    
    stages {
  
        stage ("terraform init") {
            steps {
                sh ('terraform -chdir=Terraform init -upgrade') 
            }
        }
        
        stage ("terraform plan") {
            steps {
                sh ('terraform -chdir=Terraform plan -target="module.aws-elasticbeanstalk.aws_elastic_beanstalk_application.sudos-duihua-app" -target="module.aws-elasticbeanstalk.aws_elastic_beanstalk_environment.sudos-duihua-env"') 
            }
        }

        stage ("terraform apply") {
            steps {
                sh ('terraform -chdir=Terraform apply -target="module.aws-elasticbeanstalk.aws_elastic_beanstalk_application.sudos-duihua-app" -target="module.aws-elasticbeanstalk.aws_elastic_beanstalk_environment.sudos-duihua-env" --auto-approve')
           }
        }
    }
}